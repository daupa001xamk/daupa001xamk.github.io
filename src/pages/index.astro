---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Icon from "astro-icon";
//https://icon-sets.iconify.design/
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Aukusti Website</title>
  </head>
  <body>
    <div class="w-screen min-h-screen md:mx-auto bg-white bg-cover">
      <!--Nav Bar -->
      <nav class="py-10 mb-12 flex justify-between">
        <h1 class="text-4xl text-orange-500">Web developer</h1>
        <ul class="flex items-center">
          <li>nightmode</li>
        </ul>
      </nav>
      <!--Main Card -->
      <main class="flex justify-center flex-row">
        <div class="w-1/2 p-10 rounded-md shadow-xl">
          <div class="text-center">
            <p class="text-4xl text-orange-500">Aukusti Palom√§ki</p>
            <p class="text-3xl text-gray-700">Front-end enjoyer</p>
            <p class="text-2xl text-gray-700">
              life full of music and books to read<br /> while discovering the wide
              web
            </p>
          </div>
          <!--Links -->
          <div class="text-3xl m-10 py-3 flex justify-center gap-10">
            <a href="https://github.com/daupa001xamk" target="_blank"
              ><Icon
                class="hover:-translate-y-1 hover:scale-150 duration-500 hover:bg-orange-600 hover:rounded-lg hover:h-20"
                name="mdi:github"
                width="3rem"
                height="3rem"
              /></a
            >
            <a href="" target="_blank">
              <Icon
                class="hover:-translate-y-1 hover:scale-150 duration-500 hover:bg-orange-600 hover:rounded-lg hover:h-20"
                name="mdi:linkedin"
                size="3rem"
              /></a
            >
            <a href="https://www.last.fm/user/MrAkuu" target="_blank"
              ><Icon
                class="hover:-translate-y-1 hover:scale-150 duration-500 hover:bg-orange-600 hover:rounded-lg hover:h-20"
                name="fa-brands:lastfm-square"
                width="2.8rem"
                height="2.8rem"
              /></a
            >
          </div>
        </div>
      </main>
      <!--Projects card -->
      <section class="flex justify-center flex-row py-15">
        <div class="w-1/2 p-10 rounded-md shadow-xl">
          <div class="text-center">
            <p class="text-4xl text-orange-500">Projects</p>
            <div class="flex justify-between items-center py-5">
              <div class="flex py-5 items-center">
                <Icon
                  class="hover:-translate-y-1 hover:scale-100 duration-500 hover:bg-orange-600 hover:rounded-lg hover:h-20"
                  name="ic:outline-menu-book"
                  width="2.8rem"
                  height="2.8rem"
                />
                <p class="text-2xl px-3 text-gray-700">WNDeepLReader</p>
              </div>
              <div class="flex py-5 items-center">
                <Icon
                name="mdi:react"
                width="2.8rem"
                height="2.8rem"
                />
                <Icon
                name="tabler:api"
                width="2.8rem"
                height="2.8rem"
                />
                <div>
              </div>
              <p class="text-2xl px-3 text-gray-700">(In progress)
              </div>
            </div>
            <div class="flex justify-between items-center py-5">
            <div class="flex py-5 items-center">
              <Icon
                class="hover:-translate-y-1 hover:scale-100 duration-500 hover:bg-orange-600 hover:rounded-lg hover:h-20"
                name="ic:baseline-library-music"
                width="2.8rem"
                height="2.8rem"
              />
              <p class="text-2xl px-3 text-gray-700">Music player</p>
            </div>
            <div class="flex py-5 items-center">
              <Icon
              name="cib:kotlin"
              width="1.8rem"
              height="1.8rem"
              />
              <div>
              <p class="text-2xl px-3 text-gray-700">(Starting)
              </div>
            </div>
          </div>
        </div>
            <div class="flex justify-between items-center py-5">
              <div class="flex py-5 items-center">
              <Icon
                class="hover:-translate-y-1 hover:scale-100 duration-500 hover:bg-orange-600 hover:rounded-lg hover:h-20"
                name="ri:todo-fill"
                width="2.8rem"
                height="2.8rem"
              />
              <p class="text-2xl px-3 text-gray-700">Time manager / diary</p>
            </div>
            <div class="flex py-5 items-center">
              <Icon
              name="simple-icons:csharp"
              width="2.8rem"
              height="2.8rem"
              />
              <div>
              <p class="text-2xl px-3 text-gray-700">(Starting)
              </div>
            </div>
          </div>
          <div class="flex justify-between items-center py-5">
            <div class="flex py-5 items-center">
            <Icon
              class="hover:-translate-y-1 hover:scale-100 duration-500 hover:bg-orange-600 hover:rounded-lg hover:h-20"
              name="iconoir:www"
              width="2.8rem"
              height="2.8rem"
            />
            <p class="text-2xl px-3 text-gray-700">This website</p>
          </div>
          <div class="flex py-5 items-center">
            <Icon
            name="simple-icons:astro"
            width="2.8rem"
            height="2.8rem"
            />
            <div>
            <p class="text-2xl px-3 text-gray-700">(ongoing)
            </div>
          </div>
        </div>
        </div>
      </section>
      <!--  -->
    </div>
  </body>
</html>
